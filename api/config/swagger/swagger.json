        ],
        "responses": {
          "200": {
            "description": "Get articles by tag",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Article"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/rss": {
      "post": {
        "requestBody": {
          "content": {
            "application/json": {}
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Add an RSS feed",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RSS"
                }
              }
            }
          },
          "400": {
            "description": "Please provide a valid RSS URL.",
            "content": {
              "Error": {}
            }
          }
        }
      }
    },
    "/article/rss/{rss}": {
      "get": {
        "responses": {
          "200": {
            "description": "List of articles by rss id"
          }
        }
      },
      "parameters": [
        {
          "name": "rss",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ]
    },
    "/article/{id}/like/": {
      "get": {
        "responses": {
          "200": {
            "description": "Likes count of article",
            "content": {
              "application/json": {
                "schema": {
                  "type": "integer"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Like Article",
        "responses": {
          "200": {
            "description": "Liked",
            "content": {
              "application/json": {
                "schema": {
                  "type": "integer"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Dislike Article",
        "responses": {
          "200": {
            "description": "Disliked and return likes count",
            "content": {
              "application/json": {
                "schema": {
                  "type": "integer"
                }
              }
            }
          }
        }
      },
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "description": "Article ID",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ]
    },
    "/article/{id}/visit/": {
      "get": {
        "summary": "Seen an article",
        "responses": {
          "200": {
            "description": "count of visits",
            "content": {
              "application/json": {
                "schema": {
                  "type": "integer"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Seen Article",
        "responses": {
          "200": {
            "description": "Liked",
            "content": {
              "application/json": {
                "schema": {
                  "type": "integer"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Unseen article",
        "responses": {
          "200": {
            "description": "Mark as unseened and return seens count",
            "content": {
              "application/json": {
                "schema": {
                  "type": "integer"
                }
              }
            }
          }
        }
      },
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "description": "Article ID",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ]
    }
