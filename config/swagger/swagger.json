{
  "openapi": "3.0.2",
  "info": {
    "title": "Khabarkhun",
    "description": "Khabarkhun api document.",
    "termsOfService": "http://swagger.io/terms/",
    "contact": {
      "name": "Khabarkhun API Team",
      "url": "http://khabarkhun.ir",
      "email": "info@khabarkhun.ir"
    },
    "license": {
      "name": "GNU GPLv3",
      "url": "https://www.gnu.org/licenses/gpl.txt"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080/api"
    }
  ],
  "paths": {
    "/rss": {
      "post": {
        "requestBody": {
          "content": {
            "application/json": {
              "examples": {
                "feedUrl": {
                  "value": {
                    "feedUrl": "http://example.com"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RSS"
                }
              }
            }
          },
          "400": {
            "description": "Please provide a valid RSS URL.",
            "content": {
              "Error": {}
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Error": {
        "required": [
          "code",
          "message"
        ],
        "properties": {
          "code": {
            "format": "int32",
            "type": "integer"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "Images": {
        "type": "object",
        "properties": {
          "featured": {
            "type": "string"
          },
          "banner": {
            "type": "string"
          },
          "favicon": {
            "type": "string"
          },
          "og": {
            "type": "string"
          }
        }
      },
      "RSS": {
        "required": [
          "url",
          "feedUrls",
          "title",
          "feedUrl"
        ],
        "type": "object",
        "properties": {
          "url": {
            "type": "string"
          },
          "canonicalUrl": {
            "type": "string"
          },
          "feedUrl": {
            "type": "string"
          },
          "fingerprint": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "categories": {
            "type": "string"
          },
          "featured": {
            "type": "boolean"
          },
          "feedUrls": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "public": {
            "type": "boolean"
          },
          "publicationDate": {
            "format": "date",
            "type": "string"
          },
          "valid": {
            "type": "boolean"
          },
          "lastScraped": {
            "format": "date",
            "type": "string"
          },
          "likes": {
            "type": "number"
          },
          "followerCount": {
            "type": "number"
          },
          "postCount": {
            "type": "number"
          },
          "summary": {
            "type": "string"
          },
          "interest": {
            "type": "string"
          },
          "language": {
            "type": "string"
          },
          "consecutiveScrapeFailures": {
            "type": "number"
          },
          "guidStability": {
            "type": "string"
          },
          "images": {
            "$ref": "#/components/schemas/Images"
          }
        }
      }
    },
    "securitySchemes": {
      "securityScheme": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}